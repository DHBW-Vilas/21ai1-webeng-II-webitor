{
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist", "public"],
	"compilerOptions": {
		"lib": ["ES2015", "DOM"],
		"target": "ES5",
		"downlevelIteration": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"noUnusedParameters": false,
		"module": "CommonJS",
		"allowJs": true,
		"noEmit": false
	}
}
